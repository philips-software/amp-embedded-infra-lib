{
  "build": {
    "context": "..",
    "dockerfile": "Dockerfile"
  },
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "customizations": {
    "vscode": {
      "settings": {
        "C_Cpp.autoAddFileAssociations": false,
        "cmake.statusbar.visibility": "default",
        "cmake.useProjectStatusView": false
      }
    }
  }
}
